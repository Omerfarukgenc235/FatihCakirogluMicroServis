@model FreeCourse.Web.Models.SigninInput

@{
    ViewData["Title"] = "SignIn";
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card">
             <div class="card-body">
                 <h5 class="card-title">Üye Giriş</h5>
                 <div  class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form asp-controller="Auth" asp-action="SignIn" method="post">
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email address</label>
                        <input type="email" asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input type="password" asp-for="Password" class="form-control" id="exampleInput Password1">
                        <span class="text-danger" asp-validation-for="Password"></span>

                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" asp-for="IsRemember" class="form-check-input" id="exampleCheck1">
                        <label asp-for="IsRemember" class="form-check-label">Beni hatırla</label>
                    </div>
                    <button type="submit" class="btn btn-primary">Giriş Yap</button>
                </form>
             </div>
        </div>
    </div>
</div>
