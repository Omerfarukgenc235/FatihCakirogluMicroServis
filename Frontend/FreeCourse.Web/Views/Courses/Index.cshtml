@{
    ViewData["Title"] = "Index";
}
@model List<CourseViewModel>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Kurslar</h5>
                <a asp-controller="Courses" asp-action="Create" class="btn btn-primary mb-3">Kurs Oluştur</a>
                @if (Model.Any())
                {
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Resim</th>
                                <th>Kurs Kategorisi</th>
                                <th>Kurs Adı</th>
                                <th>Fiyat</th>
                                <th>Süre</th>
                                <th>Güncelle</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var x in Model)
                            {
                                <tr>
                                    <td><img style="width:72px;" src="@x.StockPictureUrl" class="img-thumbnail" /></td>
                                    <td>@x.Category.Name</td>
                                    <td>@x.Name</td>
                                    <td>@x.Price</td>
                                    <td>@x.Feature.Duration</td>
                                    <td><a asp-controller="Courses" asp-action="Update" asp-route-id="@x.Id" class="btn btn-success btn-sm">Güncelle</a></td>
                                    <td><a asp-controller="Courses" asp-action="Delete" asp-route-id="@x.Id" class="btn btn-danger btn-sm">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">
                        Kayıtlı kurs bulunamadı.
                    </div>
                }
            </div>
        </div>
    </div>
</div>