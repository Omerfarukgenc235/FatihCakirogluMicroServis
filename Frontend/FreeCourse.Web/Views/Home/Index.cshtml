@{
    ViewData["Title"] = "Home Page";
    var count = 0;
}

@model List<CourseViewModel>

<h2>Kurslar</h2>
<hr />
@if (Model.Any())
{
    @foreach (var x in Model)
    {
        count++;
        if(count == 1 || (count % 3 == 1))
        {
            @Html.Raw("<div class='row row-cols-1 row-cols-md-3 g-4 mb-2' >")

        }
        <div class="col">            
            <div class="card">
                <img src="@x.StockPictureUrl" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@x.Name</h5>
                    <span class="badge bg-primary">Kategori: @x.Category.Name</span>
                    <br>
                    <p class="card-text">@x.ShortDescription</p>
                  
                    <h4 class="text-primary">@x.Price</h4>
                   
                    <a class="btn btn-success" asp-controller="Home" asp-action="Detail" asp-route-id="@x.Id">Detay</a>
                </div>
            </div>
        </div>
        if(count % 3 == 0)
        {
            @Html.Raw("</div>")
        }
    }
}